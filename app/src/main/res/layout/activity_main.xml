<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bc">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:src="@drawable/res"/>

        <EditText
            android:id="@+id/name"
            android:layout_below="@+id/profile"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:hint="Restaurant Name"
            android:textSize="@dimen/_16ssp"
            android:inputType="textPersonName"
            android:textColor="@color/graylight"/>
        <ImageView
            android:id="@+id/rname"
            android:layout_below="@+id/profile"
            android:layout_toLeftOf="@+id/name"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/res"/>
        <EditText
            android:id="@+id/rown"
            android:layout_below="@+id/name"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:hint="Restaurant's Owner"
            android:textSize="@dimen/_16ssp"
            android:inputType="textPersonName"
            android:textColor="@color/graylight"/>
        <ImageView
            android:id="@+id/own"
            android:layout_below="@id/rname"
            android:layout_toLeftOf="@+id/rown"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_45sdp"
            android:src="@drawable/usrusr"/>
        <EditText
            android:id="@+id/email"
            android:layout_below="@+id/rown"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:hint="Email Address"
            android:textSize="@dimen/_16ssp"
            android:inputType="textEmailAddress"
            android:textColor="@color/graylight"/>
        <ImageView
            android:id="@+id/reid"
            android:layout_below="@id/own"
            android:layout_toLeftOf="@+id/email"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_email_black_24dp"/>
        <EditText
            android:id="@+id/pass"
            android:layout_below="@+id/email"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:hint="Password"
            android:textSize="@dimen/_16ssp"
            android:inputType="textPassword"
            android:textColor="@color/graylight"/>
        <ImageView
            android:id="@+id/pas"
            android:layout_below="@id/reid"
            android:layout_toLeftOf="@+id/pass"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:src="@drawable/pswd"/>
        <EditText
            android:id="@+id/mob"
            android:layout_below="@+id/pass"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:hint="Mobile Number"
            android:textSize="@dimen/_16ssp"
            android:inputType="phone"
            android:textColor="@color/graylight"/>
        <ImageView
            android:id="@+id/mno"
            android:layout_below="@id/pas"
            android:layout_toLeftOf="@+id/mob"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/phonemob"/>
        <EditText
            android:id="@+id/add"
            android:layout_below="@+id/mob"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:hint="Address"
            android:textSize="@dimen/_16ssp"
            android:inputType="textPostalAddress"
            android:textColor="@color/graylight"/>
        <ImageView
            android:id="@+id/ad"
            android:layout_below="@id/mno"
            android:layout_toLeftOf="@+id/add"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:src="@drawable/ic_home_black_24dp"/>
        <EditText
            android:id="@+id/flic"
            android:layout_below="@+id/add"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:hint="Food License Number"
            android:textSize="@dimen/_16ssp"
            android:inputType="text"
            android:textColor="@color/graylight"/>
        <ImageView
            android:id="@+id/fl"
            android:layout_below="@id/ad"
            android:layout_toLeftOf="@+id/flic"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:src="@drawable/fl"/>

        <Button
            android:id="@+id/rsup"
            android:layout_width="@dimen/_165sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/flic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn"
            android:text="Signup" />
        <TextView
            android:id="@+id/txt"
            android:layout_below="@+id/rsup"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Already Have an Account ?"
            android:textColor="@color/graylight"/>
    </RelativeLayout>
</ScrollView>